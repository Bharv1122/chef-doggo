generator client {
    provider = "prisma-client-js"
    binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
    output = "/home/ubuntu/chef_doggo/nextjs_space/node_modules/.prisma/client"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts              Account[]
  sessions              Session[]
  dogProfiles           DogProfile[]
  recipes               Recipe[]
  disclaimerAcknowledgments DisclaimerAcknowledgment[]
  mealPlans             MealPlan[]
  nutritionLogs         NutritionLog[]
  healthObservations    HealthObservation[]
  progressPhotos        ProgressPhoto[]
  milestones            Milestone[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model DogProfile {
  id                    String   @id @default(cuid())
  userId                String
  name                  String
  breed                 String?
  weight                Float    // in lbs
  age                   Float    // in years
  size                  String   // toy/small/medium/large/giant
  lifeStage             String   // puppy/adult/senior
  activityLevel         String   // low/moderate/high
  allergies             Json     @default("[]")
  healthConditions      Json     @default("[]")
  dietaryRestrictions   Json     @default("[]")
  medications           Json     @default("[]")  // Phase 1B: Array of medication names
  
  // Phase 2: Holistic Nutrition Options
  nutritionPhilosophy   String?  // Balanced/Raw-BARF/Ancestral/Whole-Food/Rotational/Functional
  useTCVM               Boolean  @default(false)  // Phase 1C: Use TCVM recommendations
  tcvmConstitution      String?  // wood/fire/earth/metal/water
  tcvmThermalNature     String?  // yang-hot/yin-cold/balanced
  useAyurveda           Boolean  @default(false)  // Phase 1C: Use Ayurvedic principles
  ayurvedicDosha        String?  // vata/pitta/kapha
  conditionDiet         String?  // anti-inflammatory/ketogenic/renal/cardiac/diabetic/elimination
  
  dailyCalories         Int?
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  user                  User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  recipes               Recipe[]
  disclaimerAcknowledgments DisclaimerAcknowledgment[]
  mealPlans             MealPlan[]
  nutritionLogs         NutritionLog[]
  healthObservations    HealthObservation[]
  progressPhotos        ProgressPhoto[]
  milestones            Milestone[]

  @@map("dog_profiles")
}

model Recipe {
  id                String   @id @default(cuid())
  userId            String
  dogProfileId      String
  name              String
  ingredients       Json     // Array of ingredient objects
  instructions      Json     // Array of instruction strings
  nutritionSummary  Json     // Object with protein, fat, fiber, calcium, phosphorus
  supplements       Json     // Array of supplement objects with affiliate links
  servingSize       String
  transitionGuide   Json?    @default("[]")
  recipeImageUrl    String?  // Phase 1B: AI-generated recipe image
  costEstimate      Json?    // Phase 1B: {total, perServing, perDay, kibbleComparison}
  isFavorite        Boolean  @default(false)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  user              User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  dogProfile        DogProfile @relation(fields: [dogProfileId], references: [id], onDelete: Cascade)
  disclaimerAcknowledgments DisclaimerAcknowledgment[]
  mealPlanEntries   MealPlanEntry[]
  nutritionLogs     NutritionLog[]

  @@map("recipes")
}

model DisclaimerAcknowledgment {
  id                 String   @id @default(cuid())
  userId             String
  dogProfileId       String?
  recipeId           String?
  disclaimerTier     String   // "standard", "therapeutic", "critical", "medication", "holistic"
  disclaimerVersion  String   @default("1.0")  // Phase 1B: Version tracking
  acknowledgedAt     DateTime @default(now())
  ipAddress          String?

  user            User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  dogProfile      DogProfile? @relation(fields: [dogProfileId], references: [id], onDelete: SetNull)
  recipe          Recipe?     @relation(fields: [recipeId], references: [id], onDelete: SetNull)

  @@map("disclaimer_acknowledgments")
}

// Phase 2: Meal Planning
model MealPlan {
  id           String   @id @default(cuid())
  userId       String
  dogProfileId String
  name         String
  startDate    DateTime
  endDate      DateTime?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user         User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  dogProfile   DogProfile @relation(fields: [dogProfileId], references: [id], onDelete: Cascade)
  entries      MealPlanEntry[]

  @@map("meal_plans")
}

model MealPlanEntry {
  id           String   @id @default(cuid())
  mealPlanId   String
  date         DateTime
  mealType     String   // breakfast/lunch/dinner/snack
  recipeId     String?
  notes        String?
  createdAt    DateTime @default(now())

  mealPlan     MealPlan @relation(fields: [mealPlanId], references: [id], onDelete: Cascade)
  recipe       Recipe?  @relation(fields: [recipeId], references: [id], onDelete: SetNull)

  @@map("meal_plan_entries")
}

// Phase 2: Nutrition Tracking
model NutritionLog {
  id            String   @id @default(cuid())
  userId        String
  dogProfileId  String
  date          DateTime
  recipeId      String?
  customEntry   String?  // If not using a saved recipe
  portionSize   Float    // in cups
  treats        String?  // Any treats given
  waterIntake   Float?   // in cups
  notes         String?
  createdAt     DateTime @default(now())

  user          User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  dogProfile    DogProfile @relation(fields: [dogProfileId], references: [id], onDelete: Cascade)
  recipe        Recipe?    @relation(fields: [recipeId], references: [id], onDelete: SetNull)

  @@map("nutrition_logs")
}

model HealthObservation {
  id            String   @id @default(cuid())
  userId        String
  dogProfileId  String
  date          DateTime
  energyLevel   Int?     // 1-5 scale
  stoolQuality  Int?     // 1-5 scale
  coatCondition String?  // excellent/good/fair/poor
  symptoms      Json     @default("[]")  // Array of symptom strings
  weight        Float?   // in lbs
  notes         String?
  createdAt     DateTime @default(now())

  user          User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  dogProfile    DogProfile @relation(fields: [dogProfileId], references: [id], onDelete: Cascade)

  @@map("health_observations")
}

// Phase 2: Progress Tracking
model ProgressPhoto {
  id           String   @id @default(cuid())
  userId       String
  dogProfileId String
  photoUrl     String
  category     String   // full-body/coat-closeup/face
  notes        String?
  takenAt      DateTime
  createdAt    DateTime @default(now())

  user         User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  dogProfile   DogProfile @relation(fields: [dogProfileId], references: [id], onDelete: Cascade)

  @@map("progress_photos")
}

model Milestone {
  id           String   @id @default(cuid())
  userId       String
  dogProfileId String
  title        String
  description  String?
  date         DateTime
  createdAt    DateTime @default(now())

  user         User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  dogProfile   DogProfile @relation(fields: [dogProfileId], references: [id], onDelete: Cascade)

  @@map("milestones")
}

// Phase 2: Reference Data
model IngredientSafety {
  id              String   @id @default(cuid())
  name            String   @unique
  safetyRating    String   // safe/caution/toxic
  explanation     String   @db.Text
  servingSize     String?  // e.g., "1-2 berries per 10 lbs"
  preparation     String?  // e.g., "must be cooked", "remove seeds"
  thermalNature   String?  // cooling/neutral/warming/hot (TCVM)
  doshaEffect     String?  // which dosha it balances (Ayurveda)
  elementSupport  String?  // which element it supports (Five Elements)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("ingredients_safety")
}

model SupplementInteraction {
  id               String   @id @default(cuid())
  supplement1      String
  supplement2      String
  interactionType  String   // conflict/enhances/caution
  description      String   @db.Text
  severity         String   // low/moderate/high
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@unique([supplement1, supplement2])
  @@map("supplement_interactions")
}
