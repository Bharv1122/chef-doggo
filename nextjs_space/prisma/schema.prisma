generator client {
    provider = "prisma-client-js"
    binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
    output = "/home/ubuntu/chef_doggo/nextjs_space/node_modules/.prisma/client"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts              Account[]
  sessions              Session[]
  dogProfiles           DogProfile[]
  recipes               Recipe[]
  disclaimerAcknowledgments DisclaimerAcknowledgment[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model DogProfile {
  id                    String   @id @default(cuid())
  userId                String
  name                  String
  breed                 String?
  weight                Float    // in lbs
  age                   Float    // in years
  size                  String   // toy/small/medium/large/giant
  lifeStage             String   // puppy/adult/senior
  activityLevel         String   // low/moderate/high
  allergies             Json     @default("[]")
  healthConditions      Json     @default("[]")
  dietaryRestrictions   Json     @default("[]")
  nutritionPhilosophy   String?  // Balanced/High-Protein/Low-Fat/Grain-Free
  dailyCalories         Int?
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  user                  User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  recipes               Recipe[]
  disclaimerAcknowledgments DisclaimerAcknowledgment[]

  @@map("dog_profiles")
}

model Recipe {
  id                String   @id @default(cuid())
  userId            String
  dogProfileId      String
  name              String
  ingredients       Json     // Array of ingredient objects
  instructions      Json     // Array of instruction strings
  nutritionSummary  Json     // Object with protein, fat, fiber, calcium, phosphorus
  supplements       Json     // Array of supplement objects with affiliate links
  servingSize       String
  transitionGuide   Json?    @default("[]")
  isFavorite        Boolean  @default(false)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  user              User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  dogProfile        DogProfile @relation(fields: [dogProfileId], references: [id], onDelete: Cascade)
  disclaimerAcknowledgments DisclaimerAcknowledgment[]

  @@map("recipes")
}

model DisclaimerAcknowledgment {
  id              String   @id @default(cuid())
  userId          String
  dogProfileId    String?
  recipeId        String?
  disclaimerTier  String   // "standard" or "critical"
  acknowledgedAt  DateTime @default(now())
  ipAddress       String?

  user            User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  dogProfile      DogProfile? @relation(fields: [dogProfileId], references: [id], onDelete: SetNull)
  recipe          Recipe?     @relation(fields: [recipeId], references: [id], onDelete: SetNull)

  @@map("disclaimer_acknowledgments")
}
